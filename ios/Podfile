platform :ios, '14.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # ⭐ [إضافة مهمة] - مكتبة المصادقة (Authentication)
  pod 'Firebase/Auth'

  # ⭐ [إضافة مهمة] - مكتبة الإشعارات (Messaging)
  pod 'Firebase/Messaging'

  # ✅ Firestore (كانت موجودة بشكل غير كامل، هذه هي الطريقة الصحيحة)
  pod 'Firebase/Firestore'

end

# --- ✨ [ هذا هو الكود المدمج V7 ] ---
post_install do |installer|

  # (1) هذا هو الكود الأصلي الخاص بك
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end

  # (2) هذا هو كود تنظيف Razorpay الذي أضفته
  puts "--- [Beytei Script] Starting Razorpay cleanup ---"

  # المسار إلى المجلد المخالف
  framework_path = Pod::Config.instance.project_pods_root + 'razorpay-pod/Razorpay.framework/Frameworks'

  if File.directory?(framework_path)
    puts "Found nested Frameworks at: #{framework_path}"
    puts "Deleting nested Frameworks directory..."
    FileUtils.rm_rf(framework_path)
    puts "--- [Beytei Script] Razorpay cleanup finished ---"
  else
    puts "--- [Beytei Script] Nested Frameworks directory not found, skipping cleanup ---"
  end
  # --- [ نهاية الكود المدمج ] ---
end